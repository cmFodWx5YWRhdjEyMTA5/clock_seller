<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textview_information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/profile_textview_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/profile_textview_margin_bottom</item>
        <item name="android:drawablePadding">@dimen/profile_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/annouce_text_size</item>
    </style>
    <style name="textview_signup_information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/signin_drawable_padding</item>
        <item name="android:textColor">@color/my_white</item>
        <item name="android:textColorHint">@color/my_white</item>
    </style>
</resources>
