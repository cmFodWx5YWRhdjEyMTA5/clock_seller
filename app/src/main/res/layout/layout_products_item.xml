<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_price"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ItemClock"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/democlock" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/product_price" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_ItemProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Đồng hồ casio huyền thoại"
                    android:textColor="@color/product_name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/product_price" />

                <TextView
                    android:id="@+id/txt_ItemProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Giá: 100000000 Đ"
                    android:textColor="@color/product_price"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/product_price" />

                <TextView
                    android:id="@+id/txt_ItemProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Đồng hồ với thiết kế bền chắc, bao đập"
                    android:textColor="@color/my_Black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/product_price"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:scaleType="fitCenter"
                            android:id="@+id/btn_ItemProductAddToCard"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_add" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_ItemProductDecrease"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="40dp"
                            android:background="@drawable/radius_button_selector"
                            android:text="-"
                            android:textColor="@color/my_white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_ItemProductQuantity"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:text="1"
                            android:textColor="@color/my_Black"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_ItemProductIncrease"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/radius_button_selector"
                            android:text="+"
                            android:textColor="@color/my_white"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>