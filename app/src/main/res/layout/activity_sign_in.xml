<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_primary"
    tools:context=".activity.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/signin_image_height"
        android:layout_margin="@dimen/signin_layout_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/logo1" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_SISliding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/signin_tab_margin_left"
        android:layout_marginRight="@dimen/signin_tab_margin_right"
        android:background="@color/my_secondary"
        app:tabIndicatorColor="@color/my_white"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/my_white"
        app:tabTextColor="@color/my_white"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_SIViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/signin_tab_margin_left"
        android:layout_marginRight="@dimen/signin_tab_margin_right">

    </android.support.v4.view.ViewPager>


</LinearLayout>