<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/product_price" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_HIImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/democlock" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/product_price" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:id="@+id/txt_HIProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Đồng hồ casio huyền thoại"
                android:textColor="@color/product_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/product_price" />

            <TextView
                android:gravity="center"
                android:id="@+id/txt_HITotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Giá: 100000000 Đ"
                android:textColor="@color/product_price"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/product_price" />

            <TextView
                android:gravity="center"
                android:id="@+id/txt_HIDateOfPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Thanh toán: 01/06/2018"
                android:textColor="@color/my_Black"
                android:textSize="20sp"
 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/product_price" />
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/my_Black"
                    android:textSize="20sp"
                    android:text="Số lượng:"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_HIQuantity"
                    android:gravity="center"
                    android:textColor="@color/my_Black"
                    android:textSize="20sp"
                    android:text="1"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/product_price" />
</LinearLayout>